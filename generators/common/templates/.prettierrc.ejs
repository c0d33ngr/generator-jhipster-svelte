{
	"printWidth": 100,
	"tabWidth": 4,
	"useTabs": true,
<%_
if (!skipClient) { _%>
	"semi": false,
	"singleQuote": true,
	"arrowParens": "avoid",
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
<%_ } _%>
	"overrides": [
		{
			"files": "src/test/resources/**/*.html",
			"options": {
				"printWidth": 140
			}
		},
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}<% if (!skipServer && javaPrettier) { %>,
		{
			"files": "*.java",
			"options": {
				"useTabs": false,
				"printWidth": 140
			}
		}<% } %>
	]
}
